//toc
.toc-article
  background color-code
  margin 1.6em 0 0 2em
  padding 1em
  -webkit-border-radius 4px
  border-radius 4px
  border 1px solid #ddd
  strong
    padding 0.3em 0
  ul li
    list-style disc
    text-align match-parent
    margin 0.5em 0
  ol li
    list-style-type decimal
    margin 0.5em 0

#toc
  line-height 1.3em
  font-size 0.8em
  float right
  position: relative
  z-index: 1000
  margin-right: 20px
  .toc
    padding 0 
    li
      list-style-type none
  .toc-child 
    padding-left 1.5em
    padding-top 0
